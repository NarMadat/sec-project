{
  "name": "security-management-platform",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "services/*",
    "shared/*"
  ],
  "scripts": {
    "install:all": "pnpm install --recursive",
    "build": "pnpm --recursive run build",
    "start:dev": "pnpm --recursive --parallel run start:dev",
    "start:gateway": "pnpm --filter gateway-service run start:dev",
    "start:auth": "pnpm --filter auth-service run start:dev",
    "start:employee": "pnpm --filter employee-service run start:dev",
    "start:object": "pnpm --filter object-service run start:dev",
    "start:shift": "pnpm --filter shift-service run start:dev",
    "test": "pnpm --recursive run test",
    "lint": "pnpm --recursive run lint",
    "db:generate": "pnpm --recursive run db:generate",
    "db:migrate": "pnpm --recursive run db:migrate",
    "db:reset": "pnpm --recursive run db:reset",
    "db:seed": "pnpm --recursive run db:seed"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@10.20.0+sha512.cf9998222162dd85864d0a8102e7892e7ba4ceadebbf5a31f9c2fce48dfce317a9c53b9f6464d1ef9042cba2e02ae02a9f7c143a2b438cd93c91840f0192b9dd"
}
