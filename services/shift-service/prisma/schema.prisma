generator client {
  provider = "prisma-client-js"
  output   = "./generated"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Shift {
  id         String      @id @default(uuid())
  employeeId String
  objectId   String
  startTime  DateTime
  endTime    DateTime
  status     ShiftStatus @default(SCHEDULED)
  notes      String?
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt

  @@map("shifts")
}

enum ShiftStatus {
  SCHEDULED
  ACTIVE
  COMPLETED
  CANCELLED
}
